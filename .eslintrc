{
  "extends": "defaults/configurations/google",

  "env": {
    "browser": true
  },

  "globals": {
    "q": true,
    "quasar": true,
    "require": true,
    "$": true,
    "module": true,
    "exports": true,
    "_": true,
    "testing": true,
    "assert": true,
    "fileStream": true,
    "pipes": true,
    "process": true,

    "inBrowser": true,
    "moquire": true,
    "chai": true,
    "expect": true,
    "sinon": true,
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true
  },

  "rules": {
    "max-len": [1, 5000, 4],
    "no-invalid-this": 0,
    "dot-location": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }]
  }
}
